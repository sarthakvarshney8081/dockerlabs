<% if @team.errors.empty? %>
  $("#update_team_<%= @team.id %>").fadeToggle(function() {
    $(".team_information").fadeToggle();
  });
  $('.team_name').html("<%= escape_javascript(@team.name) %>");
  $('#float-alert p').html("Team '<%= escape_javascript(@team.name) %>' was updated successfully");
  $('#float-alert').fadeIn(setTimeOutAlertDelay());
  <% if @team.description.blank? %>
   $('.description').html("No description has been posted yet");
  <% else %>
    $('.description').html("<%= escape_javascript(markdown(@team.description)) %>");
  <% end %>
<% else %>
  $('#float-alert p').html("<%= escape_javascript(@team.errors.full_messages.join('<br/>')) %>");
  $('#float-alert').fadeIn(setTimeOutAlertDelay());
<% end %>
